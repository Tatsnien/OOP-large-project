<BorderPane prefHeight="768.0" prefWidth="1024.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="75.0" prefWidth="160.0" BorderPane.alignment="CENTER">
         <items>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="1024.0">
               <children>
                  <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="300.0">
                     <children>
                        <Label fx:id="lbName" style="-fx-font-weight: bold;" text="Someone Name">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label text="Director" textFill="GRAY">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets right="30.0" top="10.0" />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Home">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnHomePressed" text="Home" />
                     </items></Menu>
                <Menu mnemonicParsing="false" text="Work">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnWorkPressed" text="Work" />
                     </items></Menu>
                <Menu mnemonicParsing="false" text="Profile">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#mnProfilePressed" text="Profile" />
                     </items></Menu>
              </menus>
            </MenuBar>
         </items>
      </SplitPane>
   </top>
   <left>
      <VBox prefHeight="660.0" prefWidth="123.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnViewReports" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewReports" prefHeight="110.0" text="View Reports" />
            <Button fx:id="btnTimekeeping" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowTimekeeping" prefHeight="110.0" text="Timekeeping" />
            <Button fx:id="btnEmployeeList" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewEmployees" prefHeight="110.0" text="Employee List" />
            <Button fx:id="btnItemsList" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewItems" prefHeight="110.0" text="Items List" />
            <Button fx:id="btnFinancialStatus" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowFinancialStatus" prefHeight="110.0" text="Financial Status" />
            <Button fx:id="btnAddDiscounts" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowAddDiscounts" prefHeight="121.0" prefWidth="123.0" text="Add Discounts" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="25.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="250.0">
               <children>
                  <VBox prefHeight="100.0" prefWidth="363.0" spacing="5.0">
                     <children>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <Label fx:id="lbSearchReport" prefWidth="170.0" text="Search Report:">
                                 <font>
                                    <Font name="System Bold" size="13.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets top="5.0" />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="tfSearchReport" maxWidth="1.7976931348623157E308" prefHeight="28.0" prefWidth="212.0">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </TextField>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="363.0" spacing="5.0">
                           <children>
                              <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearchPressed" text="Search" />
                              <Button fx:id="btnSearchReportClear" mnemonicParsing="false" onAction="#btnClearPressed" text="Clear" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
                  <HBox spacing="5.0">
                     <children>
                        <Label fx:id="lbSortBy" text="Sort By:">
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                        <VBox spacing="5.0">
                           <children>
                              <MenuButton mnemonicParsing="false" prefHeight="25.0" prefWidth="155.0">
                                <items>
                                  <MenuItem mnemonicParsing="false" text="Title" />
                                  <MenuItem mnemonicParsing="false" text="Sender" />
                                    <MenuItem mnemonicParsing="false" text="Category" />
                                    <MenuItem mnemonicParsing="false" text="Date" />
                                </items>
                              </MenuButton>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <TableView fx:id="tblReports" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
              <columns>
                <TableColumn fx:id="colTitle" editable="false" maxWidth="1.7976931348623157E308" prefWidth="380.77783203125" text="Title" />
                <TableColumn fx:id="colSenderName" editable="false" prefWidth="191.77777099609375" text="Sender" />
                  <TableColumn fx:id="colCategory" editable="false" prefWidth="171.99993896484375" text="Category" />
                  <TableColumn fx:id="colDate" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="135.3333740234375" resizable="false" text="Date" />
              </columns>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TableView>
            <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="btnAddNewReport" mnemonicParsing="false" text="Add New Report" />
                  <Button fx:id="btnViewReportDetails" mnemonicParsing="false" text="View Report Details">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
